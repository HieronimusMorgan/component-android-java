<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:component="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/as"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.morg.mycomponent.component.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            component:fillColor="#FFFFFFFF"
            component:pageColor="#00000000"
            component:radius="6dp"
            component:slideInterval="3000"
            component:strokeColor="#FF777777"
            component:strokeWidth="1dp"/>

        <com.morg.mycomponent.component.StepComponent
            android:id="@+id/step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            component:count="7"
            component:type="check" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Previous" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Next" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottom_sheet"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="Show Bottom Sheet" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shopping"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="Show Shopping" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/show_case"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="Show Case View" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/card_activity"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="Show Card Activity" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/empty_space"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="Show Empty Space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Dialog 1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Dialog 2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Dialog 3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/toast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="toast" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/toast_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="toast button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/toast_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="toast count" />
        </LinearLayout>

        <com.morg.mycomponent.component.CardComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:description="This is pretty late in response, but for anyone else that is looking for this, you can do the following code to manually round the corners of your images."
            component:image="@drawable/image"
            component:title="Card Title"
            component:type="card_picture_rounded" />

        <com.morg.mycomponent.component.CardComponent
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />

        <com.morg.mycomponent.component.CardComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:buttonFirst="Location"
            component:buttonSecond="Visit"
            component:description="This is pretty late in response, but for anyone else that is looking for this, you can do the following code to manually round the corners of your images."
            component:image="@drawable/image"
            component:title="Card Title"
            component:type="card_picture" />

        <com.morg.mycomponent.component.TextInputComponent
            android:id="@+id/custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:header="Username"
            component:hint="Please Input Username"
            component:type="normal" />


        <com.morg.mycomponent.component.TextInputComponent
            android:id="@+id/customdropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:header="TextHelper"
            component:helper="Make sure your input text"
            component:hint="Please Input Text"
            component:type="helper" />

        <com.morg.mycomponent.component.TextInputComponent
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:header="Password"
            component:hint="Please Input Password"
            component:type="password" />

        <com.morg.mycomponent.component.TextInputComponent
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:header="Phone Number"
            component:hint="Please Input Phone Number"
            component:type="phone" />

        <com.morg.mycomponent.component.TextInputComponent
            android:id="@+id/helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:button="Check"
            component:header="Text Button"
            component:hint="Please Input Text"
            component:type="textbutton" />

        <com.morg.mycomponent.component.TextInputComponent
            android:id="@+id/prefix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:header="Input With Prefix"
            component:hint="Please Input"
            component:prefix="Rp"
            component:type="prefix" />

        <com.morg.mycomponent.component.TextInputComponent
            android:id="@+id/password_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:header="Password Match"
            component:hint="Please Input Password"
            component:type="password" />

        <com.morg.mycomponent.component.TextInputComponent
            android:id="@+id/password_not_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:header="Password Not Match"
            component:hint="Please Input Password"
            component:type="password" />

        <com.morg.mycomponent.component.CardComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            component:description="This is pretty late in response, but for anyone else that is looking for this, you can do the following code to manually round the corners of your images."
            component:title="Card Title"
            component:type="normal" />


    </LinearLayout>

</ScrollView>